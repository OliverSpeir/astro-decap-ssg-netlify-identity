{
	"name": "decap-starter",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "decap-server & astro dev",
		"start": "astro dev",
		"build:tailwind": "tailwindcss -i src/assets/styles/global.css -o dist/global.css --minify",
		"build:autoprefixer": "postcss dist/global.css -o dist/global.css",
		"build": "astro build && pnpm run build:tailwind && pnpm run build:autoprefixer ",
		"preview": "decap-server & astro preview",
		"astro": "astro",
		"check": "astro check",
		"sync": "astro sync"
	},
	"dependencies": {
		"astro": "^4.0.3"
	},
	"devDependencies": {
		"@astrojs/check": "^0.3.1",
		"@astrojs/tailwind": "^5.0.3",
		"@tailwindcss/typography": "^0.5.10",
		"@typescript-eslint/eslint-plugin": "^6.13.1",
		"autoprefixer": "^10.4.16",
		"decap-server": "^3.0.1",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-formatter-codeframe": "^7.32.1",
		"eslint-plugin-astro": "^0.29.1",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-prettier": "^5.0.1",
		"postcss": "^8.4.31",
		"postcss-cli": "^10.1.0",
		"postinstall-postinstall": "^2.1.0",
		"prettier": "^3.1.0",
		"prettier-plugin-astro": "^0.12.2",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.3.2"
	}
